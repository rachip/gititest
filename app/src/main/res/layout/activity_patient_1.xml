<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg"
    tools:context="com.news.kikar.biosense.patient_1">

    <LinearLayout
        android:id="@+id/screenTitle"
        android:orientation="vertical"
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="PATIENT DATE"
            android:gravity="left"
            android:id="@+id/UserDetailsTitle"
            android:textColor="#ffffff"
            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/users_d"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="280dp"
        android:layout_weight="0.95"
        android:background="#83ffffff"
        android:padding="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/C"
        android:layout_above="@+id/bSwitchActivity"
        android:paddingBottom="0dp">


        <TextView
            android:layout_width="333dp"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:text="NAME"
            android:id="@+id/textView"
            android:paddingBottom="10dp"
            android:textColor="#002e8a"
            android:singleLine="false"
            android:gravity="left" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:inputType="textPersonName"
            android:text="Shmilik kaminker"
            android:ems="10"
            android:id="@+id/name"
            android:textSize="17dp"
            android:gravity="fill_horizontal"
            android:background="@drawable/edittext"
            android:padding="10dp"
            android:textIsSelectable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=" PATIENT ID"
            android:id="@+id/p_id_text"
            android:paddingBottom="10dp"
            android:textColor="#002e8a"
            android:paddingTop="10dp"
            android:textSize="17dp"
            android:gravity="left"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:drawableLeft="@drawable/ic_pid"
            android:ems="10"
            android:id="@+id/p_id"
            android:textSize="17dp"
            android:background="@drawable/edittext"
            android:gravity="fill_horizontal"
            android:padding="10dp"
            android:text="1234" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HOSPITAL NAME"
            android:id="@+id/h_name"
            android:paddingBottom="10dp"
            android:textColor="#002e8a"
            android:paddingTop="10dp"
            android:textSize="17dp"
            android:gravity="left"/>



        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textSize="17dp"
            android:gravity="fill_horizontal"
            android:background="@drawable/edittext"
            android:drawableLeft="@drawable/ic_h_name"
            android:padding="10dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BURTH DATE"
            android:id="@+id/b_date_text"
            android:paddingBottom="10dp"
            android:textColor="#002e8a"
            android:paddingTop="10dp"
            android:textSize="17dp"
            android:gravity="left"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:drawableLeft="@drawable/ic_b_date"
            android:ems="10"
            android:id="@+id/d_date"
            android:textSize="17dp"
            android:gravity="fill_horizontal"
            android:background="@drawable/edittext"
            android:padding="10dp"
            android:text="20/2/1990" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/C"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="right"
        android:paddingTop="10dp"
        android:layout_alignBottom="@+id/screenTitle">

    </LinearLayout>

    <Button
        android:id="@+id/bSwitchActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:background="@drawable/mybutton"
        android:text="Next"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/users_d"
        android:layout_alignEnd="@+id/users_d"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentRight="false"
        android:layout_alignWithParentIfMissing="false" />


</RelativeLayout>
